# Django core
# Liara Django quick-start uses SECRET_KEY (auto-generated in Liara envs).
SECRET_KEY=replace-with-a-long-random-secret
# Backward-compatible alias used by local/dev scripts.
DJANGO_SECRET_KEY=replace-with-a-long-random-secret
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-frontend-app.liara.run,your-backend-app.liara.run

# Required for session/csrf when served behind https and proxy
DJANGO_CSRF_TRUSTED_ORIGINS=https://your-frontend-app.liara.run,https://your-backend-app.liara.run
# Prefer DATABASE_URL. Liara PostgreSQL split vars are also supported by config/settings.py.
DATABASE_URL=postgresql://user:password@host:5432/dbname
POSTGRESQL_DB_HOST=your-postgres-host
POSTGRESQL_DB_PORT=5432
POSTGRESQL_DB_NAME=your-db-name
POSTGRESQL_DB_USER=your-db-user
POSTGRESQL_DB_PASS=your-db-password
DJANGO_DB_SSL_REQUIRE=False
DJANGO_SQLITE_PATH=./db.sqlite3

# Runtime/logging/security
DJANGO_LOG_LEVEL=INFO
DJANGO_CSP=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self'; connect-src 'self';
