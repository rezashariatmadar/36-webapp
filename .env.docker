# Docker Compose defaults
POSTGRES_DB=webapp36
POSTGRES_USER=webapp36
POSTGRES_PASSWORD=webapp36

# Host -> container port forwarding
POSTGRES_FORWARD_PORT=5432
BACKEND_PORT=8000
BACKEND_FORWARD_PORT=8000
FRONTEND_FORWARD_PORT=5173

# Django runtime
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,webapp36-api,webapp36-web
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:5173

# Frontend runtime
VITE_API_PROXY_TARGET=http://webapp36-api:8000
