{
  "name": "theme",
  "version": "4.2.0",
  "description": "",
  "scripts": {
    "start": "npm run dev",
    "build": "npm run build:clean && npm run build:tailwind && npm run build:spa && npm run check:spa-budgets",
    "build:clean": "rimraf ../static/css/dist ../static/js/chunks ../static/js/reactbits-islands.js ../static/js/reactbits-islands.css ../static/js/spa-app.js ../static/js/spa-app.css",
    "build:tailwind": "cross-env NODE_ENV=production postcss ./src/styles.css -o ../static/css/dist/styles.css --minify",
    "build:spa": "cross-env NODE_ENV=production esbuild ./src/spa/main.jsx --bundle --format=esm --splitting --outdir=../static/js --entry-names=spa-app --chunk-names=chunks/[name]-[hash] --loader:.css=css --jsx=automatic --minify",
    "dev": "cross-env NODE_ENV=development postcss ./src/styles.css -o ../static/css/dist/styles.css --watch",
    "dev:spa": "cross-env NODE_ENV=development esbuild ./src/spa/main.jsx --bundle --format=esm --splitting --outdir=../static/js --entry-names=spa-app --chunk-names=chunks/[name]-[hash] --loader:.css=css --jsx=automatic --sourcemap --watch",
    "check:spa-budgets": "node ./scripts/check_spa_budgets.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "daisyui": "^5.0.43",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.10",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-nested": "^7.0.2",
    "postcss-simple-vars": "^7.0.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.11"
  }
}
