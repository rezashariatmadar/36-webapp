# Docker Compose production defaults
POSTGRES_DB=webapp36
POSTGRES_USER=webapp36
# Change this before shipping to non-local environments.
POSTGRES_PASSWORD=webapp36
POSTGRES_IMAGE=postgres:16.12-alpine3.23

# Host -> container port forwarding
POSTGRES_FORWARD_PORT=5432
BACKEND_PORT=8000
BACKEND_FORWARD_PORT=8000
FRONTEND_FORWARD_PORT=8080

# Django runtime
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,webapp36-api,webapp36-web
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8080

# Gunicorn tuning
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
